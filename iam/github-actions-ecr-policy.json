{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRGetAuthorizationToken",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:PutImage"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/retail-store-ui",
        "arn:aws:ecr:*:*:repository/retail-store-catalog",
        "arn:aws:ecr:*:*:repository/retail-store-cart",
        "arn:aws:ecr:*:*:repository/retail-store-orders",
        "arn:aws:ecr:*:*:repository/retail-store-checkout"
      ]
    },
    {
      "Sid": "ECRRepositoryManagement",
      "Effect": "Allow",
      "Action": [
        "ecr:CreateRepository",
        "ecr:DescribeRepositories",
        "ecr:ListImages",
        "ecr:DescribeImages"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/retail-store-ui",
        "arn:aws:ecr:*:*:repository/retail-store-catalog",
        "arn:aws:ecr:*:*:repository/retail-store-cart",
        "arn:aws:ecr:*:*:repository/retail-store-orders",
        "arn:aws:ecr:*:*:repository/retail-store-checkout"
      ]
    }
  ]
}
